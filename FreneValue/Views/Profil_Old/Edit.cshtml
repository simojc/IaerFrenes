@model FreneValue.Models.ARBRE

@{
    ViewBag.Title = "Modification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Modification </h2>

<div id="tabs">
    <!-- Tab Buttons -->
    <ul id="tabstrip" class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#_Profil" role="tab" data-toggle="tab">Profil arbre    </a></li>
        <li><a href="#_tronc" role="tab" data-toggle="tab">Tronc ou fût</a></li>
        <li><a href="#_Souche" role="tab" data-toggle="tab">Souche .......</a></li>
    </ul>

    <div class="tab-content">

        <div class="tab-pane fade in active" id="_Profil"> @Html.Partial("_Profil", Model)      </div>

        <div class="tab-pane fade" id="_tronc"> @Html.Action("_tronc", new { id_arb = Model.ID }) </div>

        <div class="tab-pane fade" id="_souche"> @Html.Action("_Souche", new { id_arb = Model.ID }) </div>

    </div>

</div>

<div>
    @Html.ActionLink("Retour à la Liste", "Index")
</div>


