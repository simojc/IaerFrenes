@model FreneValue.Models.org
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center> <h3>Création d'une organisation</h3> </center>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.niv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.niv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.niv, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.sigle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sigle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sigle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.parnt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.parnt, ViewBag.org.Items as List<SelectListItem>, new { @class = "form-control  " })
                @Html.ValidationMessageFor(model => model.parnt, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.cntct, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cntct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cntct, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.adr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.adr, ViewBag.localisation.Items as List<SelectListItem>, new { @class = "form-control  " })
                @Html.ValidationMessageFor(model => model.adr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-horizontal">
                <div class="col-lg-2">
                    @Html.ActionLink("Retour ", "Index", "Org", htmlAttributes: new { @class = "btn btn-primary " })
                </div>

                <div class="col-lg-2 pull-right">
                    <input type="submit" value="Enregistrer" class="btn  btn-primary" />
                </div>
            </div>
        </div>

    </div>
}

