@model FreneValue.Models.ArbreSearchModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>
        Rechercher arbre
    </h3>

</div>

@using (Html.BeginForm("index", "Arbre", FormMethod.Get))
{
    <div class="row">

        <div class="form-horizontal">
            <div class="col-lg-2">
                @Html.TextBoxFor(m => m.num_arbre, new { @class = "form-control", @placeholder = "N° arbre" })
            </div>
            @*<div class="col-lg-3">
                    @Html.TextBoxFor(m => m.id_local, new { @class = "form-control", @placeholder = "Adresse" })
                </div>*@

            <div class="col-lg-2">
                @Html.DropDownListFor(m => m.id_profil, new SelectList(ViewBag.proprio, "id", "nom" + "  " + " pren"),
                   "All Categories", new { @class = "form-control", @placeholder = "Propriétaire" })

            </div>


            <div class="col-lg-2">
                @Html.DropDownListFor(m => m.id_local, new SelectList(ViewBag.adresse, "id", "AdresseComplete"),
     "Toutes les Adresses", new { @class = "form-control", @placeholder = "Adresse" })

            </div>


            <div class="col-lg-2">
                @Html.DropDownListFor(m => m.ess, new SelectList(ViewBag.ESSENCE),
                   "Toutes les essences", new { @class = "form-control", @placeholder = "Essence" })

            </div>

            @*<div class="col-lg-3">
                    @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"),
                       "All Categories", new { @class = "form-control", @placeholder = "Category" })

                </div>*@

            <div class="col-lg-1 pull-left">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
            <div class="col-lg-1 pull-right">
                <a class="btn btn-success" data-modal="" href="/Arbre/Create" id="btnCreate">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>

                @*<p>
                        @Html.ActionLink("Create New", "Create")
                    </p>*@

            </div>
        </div>
    </div>

    <div style="margin-top:17px;">
        @{
            var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

            grid.Bind(Model.arbres, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);

            @grid.GetHtml(htmlAttributes: new { id = "grid" },
        fillEmptyRows: false,
        tableStyle: "table table-bordered table-hover",
        mode: WebGridPagerModes.All,
        columns: grid.Columns(
              grid.Column("id", "ID"),
              grid.Column("num_arbre", "N° arbre", style: "col-lg-2"),
              // grid.Column("Price", header: "Price", format: @<text>@String.Format("{0:C}", item.Price) </text>),
              grid.Column("proprio.NomPrem", "Propriétaire", style: "col-lg-2"),
              grid.Column("adresse.AdresseComplete", "Adresse", style: "col-lg-2"),

               grid.Column("typ_emplcmt", "Type Emplcmt", style: "col-lg-2"),
               grid.Column("orientatn", "Orientation", style: "col-lg-2"),
              grid.Column("ess", "Essence", style: "col-lg-2"),
              grid.Column("dt_plant", "Planté_en", style: "col-lg-2", format: (item) => item.dt_plant != null ? item.dt_plant.ToString("yyyy") : "", canSort: true),

              //Model => Model.AuditDate.ToString("mm/yyyy")
              grid.Column(header: "Action", canSort: false, style: "Action",
                format: @<text>
                @*@Html.Raw("<a data-modal='' href='/Arbre/details/" + item.id + "' id='" + item.id + "' title='Detail'> <span class='glyphicon glyphicon-search'> </span> </a>")*@
                @Html.Raw("<a data-modal='' href='/Arbre/edit/" + item.id + "' id='" + item.id + "' title='Edit'> <span class='glyphicon glyphicon-edit'> </span> </a>")
              
                &nbsp;
                @Html.Raw("<a data-modal='' href='/Arbre/delete/" + item.id + "' id='" + item.id + "' title='Delete'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                &nbsp;
                @Ajax.ActionLink("Éval", "Evaluation", new { id_arbre = item.id },  new AjaxOptions
                   {
                       UpdateTargetId = "EvalDiv",
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "GET"
                   })
                </text>)
                                                ));
        }
    </div>


            }

<div id="EvalDiv">

</div>
