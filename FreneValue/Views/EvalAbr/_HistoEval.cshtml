@using FreneValue.Helpers
@model PagedList<FreneValue.Models.eval_abr>

@using PagedList;
@using PagedList.Mvc;

<div id="RstRecherche">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Arbre
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.id)
                </th>*@
            <th>
                Évaluateur
            </th>
            <th>
                Date évaluation
            </th>
            <th>
                DHP
            </th>
            <th>
                Classe Hauteur
            </th>

            <th>
                Nb. tronc
            </th>

            <th>
                Brch. maîtresse
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Arbre.num_arbre)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Evaluateur.NomPrem)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dt_eval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dhp_tot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clas_haut)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.nb_tronc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.branch_maitr)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit", title = "Modifier" })
                        @*&nbsp;
                            &nbsp;
                            @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash", title = "Supprimer" })*@
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="col-sm-10">
        <div class="center">
            @Html.PagedListPager(Model, page => Url.Action("Index",
           new { page, pageSize = Model.PageSize }))
            Affichage de @Model.FirstItemOnPage  à @Model.LastItemOnPage
            des @Model.TotalItemCount enregistrements
        </div>
    </div>
</div>