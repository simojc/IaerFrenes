@model IEnumerable<FreneValue.Models.org>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center> <h3>Liste des organisations </h3> </center>
<div class="col-lg-2 pull-right">
    <a class="btn btn-success" data-modal="" href="@Url.Action("Create", "Org")" title='Créer'> <span class='glyphicon glyphicon-plus'> </span> </a>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.niv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sigle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.parnt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cntct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adr)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.niv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sigle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.parnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cntct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adr)
            </td>
            

            <td>
                <div class="pull-right">
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit", title = "Modifier" })
                    &nbsp;
                    &nbsp;
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash", title = "Supprimer" })
                </div>
            </td>

        </tr>
    }

</table>
