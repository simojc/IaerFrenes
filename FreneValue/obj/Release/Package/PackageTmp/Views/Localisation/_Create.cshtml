
@model FreneValue.Models.loclsn

@{
    ViewBag.Title = "Création d'une localisation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Création d'une localisation </h3>
    <br />
    <br />

    @using (Html.BeginForm("Create", "Localisation", FormMethod.Get, null))
    {

        <div class="form-horizontal">
            @Html.AntiForgeryToken()

            @Html.Label("Quel type de localisation voulez - vous créer? ", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="form-group">

                <div class="col-lg-3">
                    @*@Html.Label("Quel type de localisation voulez - vous créer?  222", htmlAttributes: new { @class = "control-label col-md-5" }))*@
                    @Html.DropDownList("type", ViewBag.typloc.Items as List<SelectListItem>, "-- selectionner un type --", new { @class = "form-control" })
                </div>
                <div class="col-lg-3">
                    <input type="submit" value="Continuer" class="btn  btn-primary" />
                </div>
            </div>
        </div>
    }

</div>
