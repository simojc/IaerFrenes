@model FreneValue.Models.essence

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center> <h3>Modification d'une essence</h3> </center>

<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("Edit", "Essence", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <table class="table ">
                    <tbody>
                        <tr>
                            <td>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.nom_lat, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.nom_lat, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nom_lat, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.nom_fr, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.nom_fr, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nom_fr, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.nom_en, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.nom_en, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nom_en, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.haut_max, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.haut_max, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.haut_max, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.diam_cime, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.diam_cime, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.diam_cime, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.dens_bois, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.dens_bois, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.dens_bois, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </td>                       
                            </tr>
                        <tr>
                            <td>
                                @if (ViewBag.id_dessn_feuil == null)
                                {
                                    <div class="form-group">
                                        <div class="control-label col-md-3">
                                            <strong> Dessin feuille  </strong>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="file" name="dessn_feuil" id="dessn_feuil" value="Sélectionner un fichier" class="form-control" />
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>
                                        <div class="col-md-4">
                                            <img width="150" height="150" src="../ShowPhoto/@ViewBag.id_dessn_feuil" alt="" />
                                        </div>
                                    </p>
                                }

                                @if (ViewBag.id_dessn_abr == null)
                                {
                                    <div class="form-group">
                                        <div class="control-label col-md-3">
                                            <strong> Dessin arbre  </strong>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="file" name="dessn_abr" id="dessn_abr" value="Sélectionner un fichier" class="form-control" />
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <p>
                                        <div class="col-md-4">
                                            <img width="150" height="150" src="../ShowPhoto/@ViewBag.id_dessn_abr" alt="" />
                                        </div>
                                    </p>

                                }

                                @if (ViewBag.id_dessn_brh == null)
                                {
                                    <div class="form-group">
                                        <div class="control-label col-md-3">
                                            <strong> Dessin branche  </strong>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="file" name="id_dessn_brh" id="id_dessn_brh" value="Sélectionner un fichier" class="form-control" />
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>
                                        <div class="col-md-4">
                                            <img width="150" height="150" src="../ShowPhoto/@ViewBag.id_dessn_brh" alt="" />
                                        </div>
                                    </p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <div class="row">
                                    <div class="form-horizontal">
                                        <div class="col-lg-2">
                                            @Html.ActionLink(
                                        linkText: "Retour à la liste",
                                        actionName: "Index",
                                        controllerName: "Essence",
                                        routeValues: null,
                                        htmlAttributes: new { @class = "btn btn-primary " })
                                        </div>
                                        <div class="col-lg-2 pull-right">
                                            <input type="submit" value="Enregistrer" class="btn  btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
